<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/heightcard_view"
    android:layout_width="match_parent"
    android:layout_marginBottom="11dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="@dimen/cornerRadius">

    <FrameLayout
        android:layout_height="@dimen/heightcard_view"
        android:layout_width="match_parent"
        android:background="@color/backgroundCardView"
        >

        <ImageView
            android:id="@+id/imageParameter"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/cardViewPaddingLeft"
            >

            <TextView
                android:id="@+id/nombreParametro"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/ph"
                android:textColor="@color/editTextColor"
                android:textSize="@dimen/textSizeParameterPh"
                android:fontFamily="serif-monospace"
                />

            <TextView
                android:id="@+id/cantidadParametro"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="6.5"
                android:textColor="@color/editTextColor"
                android:textSize="@dimen/textSizeParameterPh"
                android:gravity="right"
                android:fontFamily="serif-monospace"
                />


        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>